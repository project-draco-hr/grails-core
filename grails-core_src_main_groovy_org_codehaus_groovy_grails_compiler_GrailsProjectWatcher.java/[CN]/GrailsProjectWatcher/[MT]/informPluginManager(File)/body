{
  if (!isSourceFile(file)) {
    try {
      pluginManager.informOfFileChange(file);
    }
 catch (    Exception e) {
      LOG.error("Failed to reload file [" + file + "] with error: "+ e.getMessage());
    }
  }
 else {
    classChangeEventQueue.add(new Runnable(){
      public void run(){
        pluginManager.informOfFileChange(file);
      }
    }
);
  }
}
