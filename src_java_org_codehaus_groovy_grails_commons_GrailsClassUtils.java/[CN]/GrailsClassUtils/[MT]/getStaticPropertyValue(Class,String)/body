{
  Method getter=BeanUtils.findDeclaredMethod(clazz,getGetterName(name),null);
  try {
    if (getter != null) {
      return getter.invoke(null,null);
    }
 else {
      Field f=clazz.getDeclaredField(name);
      if (f != null) {
        return f.get(null);
      }
    }
  }
 catch (  Exception e) {
  }
  return null;
}
