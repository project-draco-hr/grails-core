{
  GrailsDomainClass domainClass=(GrailsDomainClass)application.getArtefact(DomainClassArtefactHandler.TYPE,domainClassName);
  if (domainClass == null) {
    domainClass=(GrailsDomainClass)application.getArtefact(DomainClassArtefactHandler.TYPE,domainClassName.substring(0,1).toUpperCase() + domainClassName.substring(1));
  }
  return domainClass;
}
