{
  final ClassInjector classInjector=new AbstractGrailsArtefactTransformer(){
    public boolean shouldInject(    final URL url){
      return true;
    }
    @Override public Class<?> getInstanceImplementation(){
      return DatabindingApi.class;
    }
    @Override public Class<?> getStaticImplementation(){
      return null;
    }
    @Override protected boolean requiresAutowiring(){
      return false;
    }
    @Override protected AnnotationNode getMarkerAnnotation(){
      return new AnnotationNode(new ClassNode(ControllerMethod.class));
    }
  }
;
  classInjector.performInjection(source,context,classNode);
}
