{
  if (useLimit) {
    final List<?> list=crit.list();
    if (!list.isEmpty()) {
      return GrailsHibernateUtil.unwrapIfProxy(list.get(0));
    }
  }
 else {
    try {
      return crit.uniqueResult();
    }
 catch (    NonUniqueResultException e) {
      return null;
    }
  }
  return null;
}
