{
  Method mAction=ReflectionUtils.findMethod(controller.getClass(),GrailsControllerClass.METHOD_DISPATCHER_PREFIX + actionName,MethodGrailsControllerHelper.NOARGS);
  if (mAction != null) {
    ReflectionUtils.makeAccessible(mAction);
  }
  if (mAction != null && mAction.getAnnotation(Action.class) != null) {
    return mAction;
  }
  try {
    return controller.getProperty(actionName);
  }
 catch (  MissingPropertyException mpe) {
    try {
      response.sendError(HttpServletResponse.SC_NOT_FOUND);
      return null;
    }
 catch (    IOException e) {
      throw new ControllerExecutionException("I/O error sending 404 error",e);
    }
  }
}
