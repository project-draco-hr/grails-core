{
  String lastAlias=getLastAlias();
  if (shouldLock) {
    if (lastAlias != null) {
      criteria.setLockMode(lastAlias,LockMode.UPGRADE);
    }
 else {
      criteria.setLockMode(LockMode.UPGRADE);
    }
  }
 else {
    if (lastAlias != null) {
      criteria.setLockMode(lastAlias,LockMode.NONE);
    }
 else {
      criteria.setLockMode(LockMode.NONE);
    }
  }
}
