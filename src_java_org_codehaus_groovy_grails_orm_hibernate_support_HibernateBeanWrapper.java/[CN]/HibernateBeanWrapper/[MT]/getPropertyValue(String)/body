{
  PropertyDescriptor desc=getPropertyDescriptor(name);
  Method method=desc.getReadMethod();
  Object owner=getWrappedInstance();
  try {
    if (Hibernate.isInitialized(method.invoke(owner))) {
      return super.getPropertyValue(name);
    }
  }
 catch (  Exception e) {
    log.error("Error checking Hibernate initialization on method " + method.getName() + " for class "+ owner.getClass(),e);
  }
  return null;
}
