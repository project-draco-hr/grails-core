{
  if (arguments.length == 0)   throw new MissingMethodException(METHOD_PATTERN,clazz,arguments);
  Object arg=arguments[0];
  if (!(arg instanceof Map))   throw new MissingMethodException(METHOD_PATTERN,clazz,arguments);
  final Map queryMap=(Map)arg;
  return super.getHibernateTemplate().executeFind(new HibernateCallback(){
    public Object doInHibernate(    Session session) throws HibernateException, SQLException {
      Criteria crit=session.createCriteria(clazz);
      return crit.add(Expression.allEq(queryMap)).list();
    }
  }
);
}
