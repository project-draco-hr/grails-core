{
  GrailsPluginManager manager=PluginManagerHolder.getPluginManager();
  if (manager != null) {
    GrailsPlugin controllerPlugin=manager.getGrailsPlugin("controllers");
    GroovyObject pluginInstance=controllerPlugin.getInstance();
