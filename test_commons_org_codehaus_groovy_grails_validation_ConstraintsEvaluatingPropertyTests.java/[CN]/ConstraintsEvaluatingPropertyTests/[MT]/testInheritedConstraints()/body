{
  String classSource="package org.codehaus.groovy.grails.validation\n" + "class Test {\n" + "   Long id\n"+ "   Long version\n"+ "   String name\n"+ "   static constraints = {\n"+ "      name( nullable: false, validator : { 'called' } )\n"+ "   }"+ "}";
