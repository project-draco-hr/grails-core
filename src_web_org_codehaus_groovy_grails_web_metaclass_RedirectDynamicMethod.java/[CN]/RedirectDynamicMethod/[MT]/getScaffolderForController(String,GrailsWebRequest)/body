{
  GrailsApplicationAttributes attributes=webRequest.getAttributes();
  GrailsControllerClass controllerClass=(GrailsControllerClass)attributes.getGrailsApplication().getArtefact(ControllerArtefactHandler.TYPE,controllerName);
  return (GrailsScaffolder)attributes.getApplicationContext().getBean(controllerClass.getFullName() + SCAFFOLDER);
}
