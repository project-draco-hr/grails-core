{
  if (!metadataFile.exists()) {
    FileWriter writer=new FileWriter(metadataFile);
    try {
      new Properties().store(writer,"Do not edit app.grails.* properties, they may change automatically. " + "DO NOT put application configuration in here, it is not the right place!");
    }
  finally {
      writer.close();
    }
    metadata=Metadata.getInstance(metadataFile);
  }
  for (  Object key : entries.keySet()) {
    final Object value=entries.get(key);
    if (value != null)     metadata.put(key,value.toString());
  }
  metadata.persist();
}
