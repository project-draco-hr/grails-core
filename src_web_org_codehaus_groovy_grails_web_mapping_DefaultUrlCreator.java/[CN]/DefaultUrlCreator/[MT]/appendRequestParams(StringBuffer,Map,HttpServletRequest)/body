{
  boolean querySeparator=false;
  for (Iterator i=params.keySet().iterator(); i.hasNext(); ) {
    Object name=i.next();
    if (name.equals(GrailsControllerClass.CONTROLLER) || name.equals(GrailsControllerClass.ACTION) || name.equals(ARGUMENT_ID))     continue;
    if (!querySeparator) {
      actualUriBuf.append('?');
      querySeparator=true;
    }
 else {
      actualUriBuf.append('&');
    }
    Object value=params.get(name);
    appendRequestParam(actualUriBuf,name,value,request);
  }
}
