{
  prop.setName(grailsProperty.getName());
  prop.setInsertable(true);
  prop.setUpdateable(true);
  prop.setPropertyAccessorName(mappings.getDefaultAccess());
  prop.setOptional(grailsProperty.isOptional());
  if (grailsProperty.isAssociation()) {
    prop.setCascade("all");
    if (LOG.isTraceEnabled())     LOG.trace("[GrailsDomainBinder] Set cascading strategy on property [" + grailsProperty.getName() + "] to [all]");
  }
  prop.setLazy(true);
}
