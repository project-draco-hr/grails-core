{
  GroovyClassLoader gcl=new GroovyClassLoader();
  Class dsClass=gcl.parseClass("class TestDataSource {" + " String driverClassName = 'test.driverClass'\n" + " String url = 'jdbc://testurl'\n"+ " String username ='sa'\n"+ " String password = 'pass'\n"+ " def configClass = org.codehaus.groovy.grails.orm.hibernate.cfg.DefaultGrailsDomainConfiguration.class"+ "}");
  GrailsDataSource ds=new DefaultGrailsDataSource(dsClass);
  assertNotNull(ds.getConfigurationClass());
}
