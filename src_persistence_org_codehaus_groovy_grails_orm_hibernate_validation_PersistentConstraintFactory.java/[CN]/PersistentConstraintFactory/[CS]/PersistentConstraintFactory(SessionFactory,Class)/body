{
  if (sf == null)   throw new IllegalArgumentException("Argument [sessionFactory] cannot be null");
  if (persistentConstraint == null || !PersistentConstraint.class.isAssignableFrom(persistentConstraint))   throw new IllegalArgumentException("Argument [persistentConstraint] must be an instance of " + PersistentConstraint.class);
  this.sessionFactory=sf;
  this.constraintClass=persistentConstraint;
}
