{
  try {
    cursorMove=0;
    userInputActive=true;
    try {
      if (isAnsiEnabled()) {
        return reader.readLine(ansiPrompt(PROMPT).toString());
      }
      return reader.readLine(PROMPT);
    }
  finally {
      userInputActive=false;
    }
  }
 catch (  IOException e) {
    throw new RuntimeException("Error reading input: " + e.getMessage());
  }
}
