{
  if (arguments.length == 0)   throw new MissingMethodException(METHOD_SIGNATURE,clazz,arguments);
  if (!(arguments[0] instanceof Closure))   throw new MissingMethodException(METHOD_SIGNATURE,clazz,arguments);
  final Closure callable=(Closure)arguments[0];
  if (transactionTemplate.getTransactionManager() == null)   throw new IllegalStateException("Cannot use method [withTransaction] without a PlatformTransactionManager instance");
  return transactionTemplate.execute(new TransactionCallback(){
    public Object doInTransaction(    TransactionStatus status){
      return callable.call(status);
    }
  }
);
}
