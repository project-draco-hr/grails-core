{
  StringBuffer sb2=new StringBuffer((int)(sb.length() * 1.2));
  Matcher m=bodyPattern.matcher(sb);
  if (m.find()) {
    m.appendReplacement(sb2,"");
    sb2.append("<g:captureBody");
    if (m.group(1) != null)     sb2.append(m.group(1));
    sb2.append(">");
    sb2.append(m.group(2));
    sb2.append("</g:captureBody>");
  }
  m.appendTail(sb2);
  return sb2;
}
