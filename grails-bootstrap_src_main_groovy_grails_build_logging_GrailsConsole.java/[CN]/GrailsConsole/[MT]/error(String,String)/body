{
  cursorMove=0;
  try {
    if (isAnsiEnabled()) {
      Ansi ansi=outputErrorLabel(ansi(),label).a(message);
      if (message.endsWith(LINE_SEPARATOR)) {
        out.print(ansi);
      }
 else {
        out.println(ansi);
      }
    }
 else {
      out.print(label);
      out.print(" ");
      logSimpleError(message);
    }
  }
  finally {
    postPrintMessage();
  }
}
