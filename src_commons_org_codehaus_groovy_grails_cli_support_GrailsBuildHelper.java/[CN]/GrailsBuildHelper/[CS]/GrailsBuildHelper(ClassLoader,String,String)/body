{
  try {
    this.classLoader=classLoader;
    Class clazz=classLoader.loadClass("grails.util.BuildSettings");
    File grailsHomeFile=grailsHome == null ? null : new File(grailsHome);
    File baseDirFile=baseDir == null ? null : new File(baseDir);
