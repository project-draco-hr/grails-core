{
  try {
    stackFilterer=(StackTraceFilterer)GrailsClassUtils.instantiateFromFlatConfig(application.getFlatConfig(),"grails.logging.stackTraceFiltererClass",DefaultStackTraceFilterer.class.getName());
  }
 catch (  Throwable t) {
    logger.error("Problem instantiating StackTraceFilterer class, using default: " + t.getMessage());
    stackFilterer=new DefaultStackTraceFilterer();
  }
}
