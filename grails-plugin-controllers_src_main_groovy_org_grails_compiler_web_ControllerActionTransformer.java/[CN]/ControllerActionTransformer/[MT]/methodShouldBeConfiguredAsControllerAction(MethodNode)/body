{
  return !method.isStatic() && method.isPublic() && !method.isAbstract()&& method.getAnnotations(ACTION_ANNOTATION_NODE.getClassNode()).isEmpty()&& method.getAnnotations(new ClassNode(ControllerMethod.class)).isEmpty()&& method.getLineNumber() >= 0 && !method.getName().startsWith("$") && !method.getReturnType().getName().equals(VOID_TYPE) && !isExceptionHandlingMethod(method);
}
