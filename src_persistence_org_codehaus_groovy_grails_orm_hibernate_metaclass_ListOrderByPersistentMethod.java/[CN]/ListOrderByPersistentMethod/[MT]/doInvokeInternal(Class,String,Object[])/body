{
  Matcher match=getPattern().matcher(methodName);
  String nameInSignature=match.group(2);
  final String propertyName=nameInSignature.substring(0,0).toLowerCase() + nameInSignature.substring(1);
  int temp=-1;
  if (arguments.length > 0) {
    Object arg=arguments[0];
    if (arg instanceof Integer) {
      temp=((Integer)arg).intValue();
    }
  }
  final int max=temp;
  return super.getHibernateTemplate().executeFind(new HibernateCallback(){
    public Object doInHibernate(    Session session) throws HibernateException, SQLException {
      Criteria crit=session.createCriteria(clazz);
      crit.addOrder(Order.asc(propertyName));
      if (max > -1) {
        crit.setMaxResults(max);
      }
      return crit.list();
    }
  }
);
}
