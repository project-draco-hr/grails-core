{
  if (clazz == null || StringUtils.isBlank(propertyName))   return null;
  try {
    BeanWrapper wrapper=new BeanWrapperImpl(clazz);
    if (wrapper.isReadableProperty(propertyName)) {
      return wrapper.getPropertyType(propertyName);
    }
 else {
      return null;
    }
  }
 catch (  Exception e) {
    return null;
  }
}
